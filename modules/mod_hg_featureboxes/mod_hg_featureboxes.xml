<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>HG Feature Boxes Module</name>
	<author>Marius Hogas</author>
	<creationDate>Feb 2013</creationDate>
	<copyright>Copyright (C) 2013 www.hogash.com</copyright>
	<license>Commercial module, only available with Kallyas template.</license>
	<authorEmail>hogash.themeforest@gmail.com</authorEmail>
	<authorUrl>www.hogash.com</authorUrl>
	<version>1.0.1</version>
	<description><![CDATA[
	This module will present some features with icon, title and description in several styles.
	]]></description>

	<files>
		<filename module="mod_hg_featureboxes">mod_hg_featureboxes.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename>mod_hg_featureboxes.xml</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
			
				<field name="modstyle" type="list" label="Feature boxes style" default="1" description="Feature boxes style." >
					<option value="default_style">Style 1</option>
					<option value="style2">Style 2</option>
					<option value="style3">Style 3</option>
					
				</field>
				<field name="perrow" type="text" class="input-mini" label="How many boxes per row" default="4" description="How many feature boxes should be on each row. " />
				
				<field name="show_desc" type="list" label="Show Description Column?" default="1" description="Show the description on the left side?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="mod_title" type="text" label="Module Title" default="" class="input-xlarge" />
				<field name="mod_title_size" type="list" label="Module title's size" default="bigger" description="Title size">
					<option value="normal">Smaller</option>
					<option value="bigger">Bigger</option>
				</field>
				<field name="mod_title_pos" type="list" label="Center the title?" default="1" description="Center the module title position?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="mod_desc" type="editor" rows="5" label="Module Description" default="" description="The description that appears on the left side." filter="raw" />

			</fieldset>
			 
			<fieldset name="boxes" label="Boxes Manager" addfieldpath="plugins/system/hg_assets/assets/formfield">
			
				<field name="boxes" type="hgdyno" path="plugins/system/hg_assets/assets/" showpreview="yes" label="Boxes Manager" itemnname="Box"> 
					<option type="hidden" name="vals" value="" />
					<option type="media" name="img" value="" label="Browse for image" />
					<option type="text" name="title" value="" class="input-xlarge" label="Title" />
					<option type="texturl" name="linkurl" value="" class="input-xlarge" label="Link URL" target="_self" description="Here add the url link and select the target window. Leave blank for no link." />
					<option type="textarea" name="desc" value="" class="input-xlarge" label="Description" description="Here you should add the text that will appear under the image and title." rows="4" />
				</field>
				
			</fieldset>
			
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
