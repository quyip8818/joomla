<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
        <fields name="params">
			
			<fieldset name="headers-kaltheme" label="Page Headers" addfieldpath="plugins/system/hg_assets/assets/formfield" class="gigi">
				<field type="spacer" class="text-title" label="Page Headers (defaults)"/>
				
				<field name="ph_height" type="text" value="" default="300" class="input-small" label="Page Header Height (px)" description="Page header height" />
				<field name="ph_sldcolor_default" type="list" label="Select Default Color" default="dark-blue" description="Select the color for the slideshow container">
					<option value="nobg" >No Background</option><option value="dark-blue" selected="selected">Dark Blue</option><option value="normal-blue" >Normal Blue</option><option value="light-blue" >Light Blue</option><option value="dark-red" >Dark Red</option><option value="normal-red" >Normal Red</option><option value="light-red" >Light Red</option><option value="dark-green" >Dark Green</option><option value="normal-green" >Normal Green</option><option value="light-green" >Light Green</option><option value="dark-gray" >Dark Gray</option><option value="normal-gray" >Normal Gray</option><option value="light-gray" >Light Gray</option><option value="yellow" >Yellow</option><option value="purple" >Purple</option><option value="orange" >Orange</option><option value="black" >Black</option><option value="white" >White</option>
				</field>
				<field name="ph_bgimg" type="media" label="Background Image" default="" description="Add a background Image"/>
				<field name="ph_isgradient" type="list" label="Enable Gradient?" default="1" description="Add gradient background to the slideshow container?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ph_hasmargin" type="list" label="Has Bottom Margin?" default="0" description="Add a 40px margin-bottom?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ph_noglare" type="list" label="Disable Glare?" default="0" description="Disable glare effect?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ph_customstyle" type="text" value="" class="input-xlarge" label="Custom CSS Styling?" description="ex: padding:20px;" />

				<field name="ph_showdate" type="list" label="Display date?" default="1" description="Display date under breadcrumbs?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ph_showanimation" type="list" label="Display Sparkles Animation?" default="0" description="Display sparkle animation?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ph_title" type="text" value="" class="input-xlarge" label="Title" description="Right side title. Ex: Some Title Here" />
				<field name="ph_subtitle" type="text" value="" class="input-xlarge" label="Subtitle" description="Right side SubTitle. Ex: Some SubTitle Here" />
			</fieldset>
			
			<fieldset name="slideshow-kaltheme" label="Slideshow Container Styles" addfieldpath="plugins/system/hg_assets/assets/formfield">
				<field type="spacer" class="text-title" label="Slideshow container style (defaults)"/>
				
				<field name="sldcolor_default" type="list" label="Select Default Color" default="dark-blue" description="Select the color for the slideshow container">
					<option value="nobg" >No Background</option><option value="dark-blue" selected="selected">Dark Blue</option><option value="normal-blue" >Normal Blue</option><option value="light-blue" >Light Blue</option><option value="dark-red" >Dark Red</option><option value="normal-red" >Normal Red</option><option value="light-red" >Light Red</option><option value="dark-green" >Dark Green</option><option value="normal-green" >Normal Green</option><option value="light-green" >Light Green</option><option value="dark-gray" >Dark Gray</option><option value="normal-gray" >Normal Gray</option><option value="light-gray" >Light Gray</option><option value="yellow" >Yellow</option><option value="purple" >Purple</option><option value="orange" >Orange</option><option value="black" >Black</option><option value="white" >White</option>
				</field>
				<field name="isgradient" type="list" label="Enable Gradient?" default="1" description="Add gradient background to the slideshow container?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="hasmargin" type="list" label="Has Bottom Margin?" default="0" description="Add a 40px margin-bottom?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="noglare" type="list" label="Disable Glare?" default="0" description="Disable glare effect?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="showanimation" type="list" label="Display Sparkles Animation?" default="0" description="Display sparkle animation?">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="bottommask" type="list" label="Bottom Mask" default="nomask" description="Select bottom mask style">
					<option value="nomask">No Mask</option>
					<option value="mask1">Mask 1</option>
					<option value="mask2">Mask 2</option>
					<option value="shadow">Bottom Shadow</option>
				</field>
				<field type="text" name="customstyle" value="" class="input-xlarge" label="Custom CSS Styling?" description="ex: padding:20px;" />

			</fieldset>
			
        </fields>
    </config>
</form>